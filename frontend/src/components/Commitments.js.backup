          // Try different patterns: PO-001, PO001, PO-1, etc.
          const patterns = [
            /PO-(\d+)/i,      // PO-001, PO-1
            /PO(\d+)/i,       // PO001, PO1
            /(\d+)/           // Just numbers
          ];
          
          for (const pattern of patterns) {
            const match = num.match(pattern);
            if (match) {
